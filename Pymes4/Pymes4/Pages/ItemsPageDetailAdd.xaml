<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pymes4.Pages.ItemsPageDetailAdd"
             Title="Detalle Del Producto">
    <ScrollView>
        <StackLayout Padding="10" >
            <StackLayout Spacing="0" Padding="0" >

                <StackLayout Orientation="Horizontal" Padding="8" HorizontalOptions="Center">
                    <Label Text="{Binding Code}" HorizontalTextAlignment="Center" FontSize="40"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="8" HorizontalOptions="Center">
                    <Label Text="SHAMPO 001" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <Image HorizontalOptions="Center" Source="http://192.168.0.17/sistema/upload/champu.png"/>
                <StackLayout Orientation="Horizontal" Padding="8" BackgroundColor="Gray">
                    <Label FontSize="14" Text="Cantidad:" TextColor="White" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
                    <Entry Keyboard="Numeric" Text="0" TextColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
                    <Button Text="AGREGAR AL PEDIDO" Grid.Row="1" Grid.Column="1" Command="{Binding IncreaseCountCommand}"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="8">
                    <Label FontSize="14" Text="Precio:" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
                    <Label Text="$2343" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="8">
                    <Label FontSize="14" Text="Linea:" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
                    <Label Text="CABELLO" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="8">
                    <Label FontSize="14" Text="Calificación:" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
                    <Label Text="AAA" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="8">
                    <Label FontSize="14" Text="Garantía:" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
                    <Label Text="N/A" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="8">
                    <Label Text="El champú limpia separando el sebo del cabello. El sebo es un aceite segregado por las glándulas sebáceas, que a su vez es expulsado al exterior mediante los folículos pilosos (invaginaciones en la dermis). El sebo es fácilmente absorbido por los cabellos formando una capa protectora." />
                </StackLayout>
            </StackLayout>

            <Label Text="{Binding CountDisplay}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>